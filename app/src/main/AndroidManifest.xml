<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.health.mate">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="id.health.mate.App"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Application">

        <activity
            android:name="id.health.mate.presentation.SplashActivity"
            android:theme="@style/Theme.Application.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="id.health.mate.presentation.home.MainActivity"
            android:theme="@style/Theme.Application.NoActionBar" />
    </application>

</manifest>