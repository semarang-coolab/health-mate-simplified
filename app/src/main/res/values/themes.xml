<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Application" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">#204A87</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.Application.NoActionBar" parent="Theme.Application">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Application.Splash" parent="Theme.Application.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/activity_splash</item>
    </style>

    <color name="splash_background_color">#204A87</color>

    <color name="card_answer_selected">#3465A4</color>

    <color name="background_color">#204A87</color>
</resources>